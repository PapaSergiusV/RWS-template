{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"indent": ["error", 2, { "SwitchCase": 1 }],
		"quotes": [1, "double"],
		"react/prop-types": "off",
		"react-hooks/exhaustive-deps": "off",
    	"semi": [1, "always"],
		"no-unused-vars": [0],
		"no-console": "error"
	}
}
